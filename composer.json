{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.1.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "dompdf/dompdf": "^0.8.3",
        "friendsofsymfony/jsrouting-bundle": "^2.2",
        "symfony/console": "*",
        "symfony/debug": "*",
        "symfony/flex": "^1.1",
        "symfony/form": "4.2.*",
        "symfony/framework-bundle": "*",
        "symfony/monolog-bundle": "*",
        "symfony/orm-pack": "^1.0",
        "symfony/security-bundle": "*",
        "symfony/twig-bundle": "*",
        "symfony/validator": "4.2.*",
        "symfony/web-server-bundle": "*",
        "symfony/webpack-encore-pack": "^1.0",
        "symfony/yaml": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.11.2",
        "phpstan/phpstan-doctrine": "^0.11.1",
        "phpstan/phpstan-symfony": "^0.11.0",
        "squizlabs/php_codesniffer": "3.*",
        "symfony/debug-pack": "^1.0",
        "symfony/dotenv": "*",
        "symfony/maker-bundle": "^1.11",
        "symfony/phpunit-bridge": "*",
        "symfony/profiler-pack": "^1.0",
        "thecodingmachine/phpstan-strict-rules": "^0.11.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "phpstan": "phpstan analyse src/ -c phpstan.neon --level=7 --no-progress -vvv --memory-limit=1024M",
        "phpcs": "phpcs --standard=PSR2",
        "phpcbf": "phpcbf --standard=PSR2",
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },

    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/weaverryan/FOSJsRoutingBundle"
        }
    ],
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.2.*"
        }
    }
}
