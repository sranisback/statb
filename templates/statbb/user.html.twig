{% extends "statbb/base.html.twig" %}
      
{% block body %}
    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="panel-body">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#coach">Coach</a></li>
                <li><a data-toggle="tab" href="#ligue">Ligue Open</a></li>
                <li><a data-toggle="tab" href="#parametre">Parametres</a></li>
                {% if app.user.roles["role"] == 'ROLE_ADMIN' %}
                    <li><a data-toggle="tab" href="#match">Ajouter un match</a></li>
                {% endif %}
            </ul>

            <div class="tab-content">
                <div id="coach" class="tab-pane fade in active">
                    {{ render(controller('App\\Controller\\StatBBController::tabCoach' )) }}
                </div>
                <div id="ligue" class="tab-pane fade">
                    {{ render(controller('App\\Controller\\StatBBController::tabLigue')) }}
                </div>
                <div id="parametre" class="tab-pane fade">
                    {{ render(controller('App\\Controller\\StatBBController::tabParametre')) }}
                </div>
                {% if app.user.roles["role"] == 'ROLE_ADMIN' %}
                <div id="match" class="tab-pane fade">
                    {{ render(controller('App\\Controller\\MatchController::ajoutMatch' )) }}
                </div>
                {% endif %}
            </div>
        </div>
        </div>
    </div>

{% endblock %}
		
