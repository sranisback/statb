{% extends "statbb/base.html.twig" %}
      
{% block body %}
    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="panel-body">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#home">Home</a></li>
                <li><a data-toggle="tab" href="#allteam">Toutes les équipes</a></li>
                <li><a data-toggle="tab" href="#classement">Classement général</a></li>
                <li><a data-toggle="tab" href="#cimetiere">Cimetière</a></li>
                <li><a data-toggle="tab" href="#Elo">Classement ELO</a></li>
                <li><a data-toggle="tab" href="#Primes">Primes</a></li>
                <li><a data-toggle="tab" href="#Defis">Défis</a></li>
                <li><a data-toggle="tab" href="#AncienneEquipes">Anciennes Equipes</a></li>
                <li><a data-toggle="tab" href="#user">Parametres</a></li>
                {% if app.user.roles["role"] == 'ROLE_ADMIN' %}
                    <li><a data-toggle="tab" href="#match">Ajouter un match</a></li>
                {% endif %}
            </ul>

            <div class="tab-content">
                <div id="home" class="tab-pane fade in active">
                    {{ render(controller('App\\Controller\\EquipeController::showUserTeams' )) }}
                </div>
                <div id="allteam" class="tab-pane fade">
                    <h3>Toute les équipes</h3>
                    {{ render(controller('App\\Controller\\EquipeController::montreLesEquipes' )) }}
                </div>
                <div id="classement" class="tab-pane fade">
                    {{ render(controller('App\\Controller\\ClassementController::classGen')) }}
                </div>
               <div id="cimetiere" class="tab-pane fade">
                    {{ render(controller('App\\Controller\\ClassementController::montreLeCimetiere')) }}
                </div>
                <div id="Elo" class="tab-pane fade">
                    {{ render(controller('App\\Controller\\ClassementController::montreClassementELO')) }}
                </div>
                <div id="Primes" class="tab-pane fade">
                    {{ render(controller('App\\Controller\\PrimeController::montrePrimesEnCours')) }}
                </div>
                <div id="Defis" class="tab-pane fade">
                    {{ render(controller('App\\Controller\\DefisController::afficherLesDefis')) }}
                </div>
                <div id="user" class="tab-pane fade">
                    {{ render(controller('App\\Controller\\UtilisateurController::interfaceUtilisateur')) }}
                </div>
                <div id="AncienneEquipes" class="tab-pane fade">
                    {{ render(controller('App\\Controller\\EquipeController::montreLesAnciennesEquipes',{'coachActif':app.user.coachId})) }}
                </div>
                {% if app.user.roles["role"] == 'ROLE_ADMIN' %}
                <div id="match" class="tab-pane fade">
                    {{ render(controller('App\\Controller\\MatchController::ajoutMatch' )) }}
                </div>
                {% endif %}
            </div>
        </div>
        </div>
    </div>

{% endblock %}
		
