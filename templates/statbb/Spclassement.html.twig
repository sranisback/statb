{% if limit == 0 %}
    <div class="modal-header">
        <button type="button" class="close pull-right" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
        </button>
        <h3 class="text-center">{{ title }}</h3>
    </div>
<div class="modal-body">
    {% endif %}
    {% if limit != 0 %}
        <h3 class="text-center">{{ title }}</h3>
    {% endif %}
    <div class="table-responsive">
        <table class="table table-striped" id="{{ class }}">
            <tbody>
            {% for player in players %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td><img src="{{ asset('build/images/player_icons/'~player.icon~'.gif') }}"
                             class=".img-responsive">{{ player.nr }}.{{ player.name }}{{ player.sold }}{{ player.dead }}
                        - {{ player.teams }}</td>
                    <td>{{ player.score }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% if limit == 0 %}
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
    </div>
</div>
{% endif %}
{% if limit > 0 %}
    <a type="button" class="btn btn-primary" data-toggle="modal"
       href="{{ path('classement',{'type':type,'teamorplayer':teamorplayer,'limit':0}) }}" data-target="#cl{{ type }}">Tous
        les joueurs</a>

    <div class="modal fade" id="cl{{ type }}">
        <div class="modal-dialog">
            <div class="modal-content">
            </div>
        </div>
    </div>
{% endif %}