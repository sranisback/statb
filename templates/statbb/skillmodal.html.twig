<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#xp_{{ playerId }}" style="margin:0; padding: 0;">
    <p style="margin:1px;" class="glyphicon glyphicon-arrow-up"/>PX
</button>


<div class="modal fade" id="xp_{{ playerId }}">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title">Ajout d'une comp√©tence</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
                </button>

            </div>

            <div class="modal-body">
                <div class="modal-body">
                    {{ form_start(form, {'action': path('ajoutComp',{'playerid':playerId})}) }}
                    {{ form_errors(form) }}
                    {% if(ruleset == 0) %}
                        {{ form_row(form.fSkill) }}
                    {% else %}
                        {{ form_row(form.fSkillBb2020) }}
                        {{ form_row(form.hasard) }}
                    {% endif %}
                </div>
                <div class="modal-footer">
                    {{ form_widget(form.submit) }}{{ form_widget(form.cancel) }}
                    {{ form_end(form) }}
                </div>

            </div>
        </div>
    </div>
</div>

