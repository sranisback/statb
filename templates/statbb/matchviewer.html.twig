{% extends "statbb/base.html.twig" %}

{% block body %}
    <div class="container-fluid">
        <div class="panel">
            <div class="row">
                <div class="container-fluid">
                    <div class="col-sm-1 col-lg-1 col-md-1">
                        <div class="row" style="margin-top:50px; ">
                            <div class="col-sm-12 col-lg-12 col-md-12">
                            </div>
                        </div>
                        <img src="{{ asset('build/images/race_icons/'~match.team1.fRace.icon~'.png') }}"
                             class="img-responsive">
                    </div>
                    <div class="col-sm-10 col-lg-10 col-md-10">
                        <div class="row">
                            <div class="col-sm-12 col-lg-12 col-md-12">
                                <h4 class="text-center">Match n°{{ match.matchId }} -
                                    Le {{ match.dateCreated|date("d/m/y") }}</h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 col-lg-4 col-md-4">
                                <h2><a data-toggle="modal" data-target="#team_{{ match.team1.teamId }}"
                                       href="{{ path('team', {'teamid': match.team1.teamId ,'type':'modal' }) }}">{{ match.team1.name }}</a>
                                </h2>

                                <div class="modal fade" id="team_{{ match.team1.teamId }}">
                                    <div class="modal-dialog modal-lg">
                                        <div class="modal-content">
                                            <img src="{{ asset('build/images/big-loader.gif') }}"
                                                 class="img-responsive center-block">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4 col-lg-4 col-md-4">
                                <h2 class="text-center">{{ match.team1Score }} - {{ match.team2Score }}</h2>
                            </div>
                            <div class="col-sm-4 col-lg-4 col-md-4">
                                <h2 class="pull-right"><a data-toggle="modal"
                                                          data-target="#team_{{ match.team2.teamId }}"
                                                          href="{{ path('team', {'teamid': match.team2.teamId ,'type':'modal' }) }}">{{ match.team2.name }}</a>
                                </h2>

                                <div class="modal fade" id="team_{{ match.team2.teamId }}">
                                    <div class="modal-dialog modal-lg">
                                        <div class="modal-content">
                                            <img src="{{ asset('build/images/big-loader.gif') }}"
                                                 class="img-responsive center-block">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 col-lg-4 col-md-4">
                                <h3>{{ match.team1.ownedByCoach.name }}</h3>
                            </div>
                            <div class="col-sm-4 col-lg-4 col-md-4">
                                <p class="text-center">Météo : {{ match.fMeteo.nom }}</p>
                            </div>
                            <div class="col-sm-4 col-lg-4 col-md-4">
                                <h3 class="pull-right">{{ match.team2.ownedByCoach.name }}</h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 col-lg-4 col-md-4">
                                <h4>{{ match.team1.fRace.name }}, {{ match.team1.tv/1000 }}</h4>
                            </div>
                            <div class="col-sm-4 col-lg-4 col-md-4">
                                <p class="text-center">Type Stade : {{ match.fStade.type }}</p>
                            </div>
                            <div class="col-sm-4 col-lg-4 col-md-4">
                                <h4 class="pull-right">{{ match.team2.fRace.name }}, {{ match.team2.tv/1000 }}</h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 col-lg-4 col-md-4">
                                Variation de pop : {{ match.ffactor1 }}
                            </div>
                            <div class="col-sm-4 col-lg-4 col-md-4">
                                <p class="text-center">Affluence : {{ match.fans }}</p>
                            </div>
                            <div class="col-sm-4 col-lg-4 col-md-4">
                                <span class="pull-right">Variation de pop : {{ match.ffactor2 }}</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 col-lg-4 col-md-4">
                                Gain: {{ match.income1 }} po
                            </div>
                            <div class="col-sm-4 col-lg-4 col-md-4">
                            </div>
                            <div class="col-sm-4 col-lg-4 col-md-4">
                                <text class="pull-right">Gain: {{ match.income2 }} po</text>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 col-lg-4 col-md-4">
                                {{ actionEquipe1|raw }}
                            </div>
                            <div class="col-sm-4 col-lg-4 col-md-4">
                            </div>
                            <div class="col-sm-4 col-lg-4 col-md-4">
                                <text class="pull-right">{{ actionEquipe2|raw }}</text>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-1 col-lg-1 col-md-1" style="margin-top:50px; ">
                        <img src="{{ asset('build/images/race_icons/'~match.team2.fRace.icon~'.png') }}"
                             class="img-responsive pull-right">
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
