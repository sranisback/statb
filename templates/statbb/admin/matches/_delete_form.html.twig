<form method="post" action="{{ path('matches_delete', {'matchId': match.matchId}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ match.matchId) }}">
    <button class="btn">Delete</button>
</form>
