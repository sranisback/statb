            </tr>
            <tr>
                <th>Ff</th>
                <td>{{ team.ff }}</td>
            </tr>
            <tr>
                <th>Elo</th>
                <td>{{ team.elo }}</td>
            </tr>
            <tr>
                <th>Tv</th>
                <td>{{ team.tv }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ team.year }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ team.logo }}</td>
            </tr>
            <tr>
                <th>Franchise</th>
                <td>{{ team.franchise ? 'Yes' : 'No' }}</td>
            </tr>
