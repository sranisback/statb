{% block title %}Teams{% endblock %}

{% block body %}
    <h1>Teams</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>TeamId</th>
                <td>{{ team.teamId }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>Treasury</th>
                <td>{{ team.treasury }}</td>
            </tr>
            <tr>
                <th>Apothecary</th>
                <td>{{ team.apothecary }}</td>
            </tr>
            <tr>
                <th>Rerolls</th>
                <td>{{ team.rerolls }}</td>
            </tr>
            <tr>
                <th>FfBought</th>
                <td>{{ team.ffBought }}</td>
            </tr>
            <tr>
                <th>AssCoaches</th>
                <td>{{ team.assCoaches }}</td>
            </tr>
            <tr>
                <th>Cheerleaders</th>
                <td>{{ team.cheerleaders }}</td>
            </tr>
            <tr>
                <th>Retired</th>
