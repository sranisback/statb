<form method="post" action="{{ path('players_delete', {'playerId': player.playerId}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ player.playerId) }}">
    <button class="btn">Delete</button>
</form>
